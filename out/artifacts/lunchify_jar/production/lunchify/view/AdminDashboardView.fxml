<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AdminDashboardController"
            stylesheets="@/css/admin-dashboard.css">

    <!-- Sidebar (unverÃ¤ndert) -->
    <left>
        <VBox styleClass="sidebar" spacing="20" alignment="TOP_CENTER" prefWidth="200">
            <padding><Insets top="30" right="10" bottom="30" left="10"/></padding>
            <Button text="ðŸ‘¥ Manage Users" styleClass="sidebar-button" onAction="#openUserManagement"/>
            <Button text="ðŸ“¥ Manage Requests" styleClass="sidebar-button"/>
            <Button text="âš™ Settings" styleClass="sidebar-button" onAction="#openReimbursementSettings"/>
            <Button text="ðŸ”“ Log out" styleClass="logout-button" onAction="#handleLogout"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Titel -->
            <Label text="ðŸ“Š Admin Dashboard" styleClass="dashboard-title"/>

            <!-- Statistik-Karten -->
            <HBox spacing="20" alignment="CENTER">
                <VBox styleClass="stat-card">
                    <Label text="Invoices / Monat" styleClass="stat-title"/>
                    <Label fx:id="lblTotalPerMonth" text="â€“" styleClass="stat-value"/>
                </VBox>
                <VBox styleClass="stat-card">
                    <Label text="Ã˜ Invoices / Mitarbeiter" styleClass="stat-title"/>
                    <Label fx:id="lblAvgPerEmp" text="â€“" styleClass="stat-value"/>
                </VBox>
                <VBox styleClass="stat-card">
