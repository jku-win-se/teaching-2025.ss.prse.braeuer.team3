<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="controller.ChangePasswordController"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      spacing="15" alignment="CENTER" style="-fx-padding:20;">
    <Label text="Set your new password" style="-fx-font-size:16; -fx-font-weight:bold;"/>
    <PasswordField fx:id="newPwd"    promptText="New password"/>
    <PasswordField fx:id="confirmPwd" promptText="Confirm password"/>
    <Button text="Change Password" onAction="#handleChange"/>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
