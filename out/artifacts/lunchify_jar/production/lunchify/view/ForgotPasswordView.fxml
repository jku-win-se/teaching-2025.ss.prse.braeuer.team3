<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ForgotPasswordController">

    <!-- Linker Bereich -->
    <left>
        <VBox styleClass="left-panel" spacing="10.0" alignment="CENTER_LEFT" prefWidth="300">
            <children>
                <Label text="Forgot your password?" styleClass="headline"/>
                <Label text="Provide us your email address so that we can assist you in resetting your password."
                       wrapText="true" styleClass="subtext"/>
            </children>
            <padding><Insets top="60" left="30" right="30" bottom="30"/></padding>
        </VBox>
    </left>

    <!-- Rechter Bereich -->
    <center>
        <VBox alignment="CENTER" spacing="15.0" styleClass="right-panel">
            <children>
                <ImageView fx:id="logoImage" fitWidth="45" preserveRatio="true"/>
                <Label text="Lunchify" styleClass="title"/>
                <Label text="Password Reset" styleClass="subtitle"/>

                <TextField fx:id="emailField" promptText="Enter your email" styleClass="input-field"/>

                <Button fx:id="resetButton" text="CONFIRM" styleClass="login-button"/>
                <Label fx:id="infoLabel" text="" styleClass="info-label" visible="false"/>
            </children>
            <padding><Insets top="60" left="60" right="60" bottom="60"/></padding>
        </VBox>
    </center>
</BorderPane>
